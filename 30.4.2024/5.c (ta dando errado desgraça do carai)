//Construa um programa em C que cadastra 5 produtos (nome e preço) e informa:
//a média de preços
//quais produtos estão abaixo dessa média
//imprime os produtos em ordem crescente de preço

#include <stdio.h>
#include <string.h>

char nome[5], abaixomedia[5], preco[5];
int i;
float total = 0, media;

int main(){
    //anota valores
    for (i = 0; i < 5; i++)
    {
        printf("Nome\n");
        scanf("%s", nome[i]);

        printf("Custo\n");
        scanf("%s", preco[i]);
        
        total = (total+preco[i]);
        printf("%d", i);
    }

    media = (total/5);
    printf("%.2f eh a media", media);

    // comprara com a media
    for (i = 0; i < 5; i++)
    {
        if (preco[i] < media)
        {
            abaixomedia[i] = nome[i];
        }
    }
    
    puts(abaixomedia);
    
return(0);
}
